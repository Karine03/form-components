<% code("html") do %>
  <div id="rounded-form" class="bg-full-height flex-centered bg-white">
    <div class="container text-center">
      <div class="small-form-container text-center">
        <img src="user.png" alt="user">
        <form action="/">
          <div class="form-item float-label">
            <label for="email">
              <span class="label-content">Email</span>
            </label>
            <input type="email" name="email" id="email"/>
          </div>
          <div class="form-item float-label">
            <label for="password">
              <span class="label-content">Password</span>
            </label>
            <input type="password" name="password" id="password"/>
          </div>
          <input type="submit" value="Log In">
        </form>
      </div>
    </div>
  </div>
<% end %>
