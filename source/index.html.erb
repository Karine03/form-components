---
title: Form components
---

<div id="rounded-form" class="bg-full-height flex-centered bg-white">
  <div class="container text-center">
    <h1>Form Components</h1>
    <div class="small-form-container text-center">
      <%= image_tag "user.png", class: "img-circle" %>
      <form action="/">
        <div class="form-item float-label">
          
          <label for="email">
            <span class="label-content">Email</span>
          </label>
          <input type="email" name="email" id="email"/>
        </div>
        <div class="form-item float-label">
          
          <label for="password">
            <span class="label-content">Password</span>
          </label>
          <input type="password" name="password" id="password"/>
        </div>
        <input type="submit" value="Log In">
      </form>
    </div>
    <%= image_tag 'code.png', id: "rounded-form-code", class: "btn-circle-fixed" %>
  </div>
</div>

<div class="code-container hide" id="rounded-form-code-container">
  <%= partial "forms/rounded-form" %>
  <%= link_to "View CSS code", github_sass_url("rounded-form"), class: "btn-rounded", target: "_blank"%>
</div>

