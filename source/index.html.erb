---
title: UI Form components
---

<div id="rounded-form" class="bg-full-height flex-centered bg-white">
	<div class="container">
		<div class="small-form-container text-center">
			<%= image_tag "user.png", class: "img-circle" %>
			<form action="/">
				<div class="form-item float-label">
					
					<label for="email">
						<span class="label-content">Email</span>
					</label>
					<input type="email" name="email" id="email"/>
				</div>
				<div class="form-item float-label">
					
					<label for="password">
						<span class="label-content">Password</span>
					</label>
					<input type="password" name="password" id="password"/>
				</div>
				<input type="submit" value="Log In">
			</form>
		</div>
	</div>
</div>

<div id="subscribe-form" class="bg-half-height flex-centered bg-green">
	<div class="container">
		<div class="large-form-container">
			<h2 class="text-center">You know you love us!</h2>
			<form action="" class="flex-centered">
				<input type="email" name="email" id="email" placeholder="Leave us your email" />
				<input type="submit" value="GO">
			</form>
		</div>
	</div>
</div>

<div id="search-form" class="bg-half-height flex-centered bg-black">
	<div class="container">
		<div class="large-form-container text-center">
			<form action="" class="flex-centered">
				<input type="text" name="email" id="email" placeholder="Where are you going ?" />
				<input type="submit" value="Search">
			</form>
		</div>
	</div>
</div>

<div id="user-form" class="bg-full-height flex-centered bg-blue">
	<div class="container">
		<div class="large-form-container text-center">
			<%= image_tag "rocket.png", class: "img-circle" %>
			<form action="">
				<div class="flex-middle">
					<h2>1/ Choose your gender:</h2>
					<div class="checkboxes">
						<input type="radio" name="gender" id="mme"/>
						<label for="mme">
							W
						</label>
						<input type="radio" name="gender" id="mr"/>
						<label for="mr">
							M
						</label>
					</div>
				</div>
				<h2>2/ What about your basic info ?</h2>
				<div class="row">
					<div class="col-xs-6">
						<div class="form-item float-label">				
							<label for="first_name">
								<span class="label-content">First Name</span>
							</label>
							<input type="text" name="first_name" id="first_name"/>
						</div>
					</div>
					<div class="col-xs-6">
						<div class="form-item float-label">		
							<label for="last_name">
								<span class="label-content">Last Name</span>
							</label>
							<input type="text" name="last_name" id="last_name"/>
						</div>
					</div>
				</div>
				<h2>3/ 	Show me your face!</h2>
			 	<div class="import-file-container">
			 		<label for="file-upload">
			 			<i class="fa fa-upload"></i>
			 		</label>
			 		<input type="file" id="file-upload">
					<p class="file-return"></p>
				</div>
				<div class="text-right">
					<input type="submit" value="Save">
				</div>

			</form>
		</div>
	</div>
</div>


